{
	"version": "2.0.0",
	"tasks": [
		{ //=============================================== Teminal
			"label": "term",
			"options": {
				"statusbar": {
					"label": "$(terminal)"
				}
			},
			"type": "shell",
			"command": "ssh",
			"args": [
				"pi@${env:RPI_ADDRESS}"
			],
			"presentation": {
				"clear": true,
				"group": "default"
			}
		}, //=============================================== Sync webserver
		{
			"label": "upload",
			"options": {
				"statusbar": {
					"label": "$(sync) Sync Website"
				}
			},
			"type": "shell",
			"command": "rsync",
			"args": [
				"-avzP",
				"./website/*",
				"pi@${env:RPI_ADDRESS}:/var/www/pjsdvgroup13.com/public_html/",
			],
			"presentation": {
				"group": "default"
			}
		},
		{ //=============================================== Reboot
			"label": "reboot",
			"options": {
				"statusbar": {
					"label": "$(debug-restart) Reboot Pi"
				}
			},
			"type": "shell",
			"command": "sshpass",
			"args": [
				"ssh",
				"pi@${env:RPI_ADDRESS}",
				"sudo",
				"shutdown",
				"-r",
				"now"
			],
			"presentation": {
				"clear": true
			}
		},
		{ //=============================================== Shutdown Pi
			"label": "shutdown",
			"options": {
				"statusbar": {
					"label": "$(zap) Shutdown Pi"
				}
			},
			"type": "shell",
			"command": "sshpass",
			"args": [
				"ssh",
				"pi@${env:RPI_ADDRESS}",
				"sudo",
				"shutdown",
				"-h",
				"now"
			],
			"presentation": {
				"clear": true
			}
		},
		{ //=============================================== clean
			"label": "clean",
			"options": {
				"statusbar": {
					"label": "$(trash) Clean"
				}
			},
			"type": "shell",
			"command": "make",
			"args": [
				"clean"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		}, //=============================================== build
		{
			"label": "build",
			"options": {
				"statusbar": {
					"label": "$(gear) Build"
				}
			},
			"type": "shell",
			"command": "make",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"clear": true,
				"group": "default"
			}
		}, //=============================================== upload
		{
			"label": "upload",
			"options": {
				"statusbar": {
					"hide": true
				}
			},
			"dependsOn": [
				"build"
			],
			"type": "shell",
			"command": "rsync",
			"args": [
				"-avzP",
				"./bin/*",
				"pi@${env:RPI_ADDRESS}:~/",
			],
			"presentation": {
				"group": "default"
			}
		}, //=============================================== run
		{
			"label": "run",
			"options": {
				"statusbar": {
					"label": "$(run) Run"
				}
			},
			"dependsOn": [
				"upload"
			],
			"type": "shell",
			"command": "sshpass",
			"args": [
				"ssh",
				"pi@${env:RPI_ADDRESS}",
				"./proj_sys_rpi_app"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"clear": true,
				"group": "default"
			}
		}, //=============================================== Kill remote
		{
			"label": "Kill remote",
			"options": {
				"statusbar": {
					"label": "$(remove-close) Kill remote"
				}
			},
			"type": "shell",
			"command": "sshpass",
			"args": [
				"ssh",
				"pi@${env:RPI_ADDRESS}",
				"killall",
				"./proj_sys_rpi_app",
				"&&",
				"sshpass",
				"ssh",
				"pi@${env:RPI_ADDRESS}",
				"sudo",
				"killall",
				"gdbserver"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never",
				"clear": true
			}
		}, //=============================================== debug
		{
			"label": "debug",
			"options": {
				"statusbar": {
					"label": "$(debug) Start remote"
				}
			},
			"dependsOn": [
				"upload"
			],
			"type": "shell",
			"command": "sshpass",
			"args": [
				"ssh",
				"pi@${env:RPI_ADDRESS}",
				"gdbserver",
				"localhost:9999",
				"./proj_sys_rpi_app"
			],
			"presentation": {
				"clear": true,
				"group": "default"
			}
		}
	]
}